<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:id="chatRoot" xmlns="http://javafx.com/javafx/8.0.40"
            fx:controller="com.faforever.client.chat.ChatController">
  <children>
    <TabPane fx:id="chatsTabPane" tabClosingPolicy="ALL_TABS" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
             AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"/>

    <VBox fx:id="connectingProgressPane" alignment="CENTER" spacing="10.0" AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
      <children>
        <ProgressIndicator prefHeight="80.0" prefWidth="80.0"/>
        <Label text="%irc.connecting.message">
          <VBox.margin>
            <Insets/>
          </VBox.margin>
        </Label>
      </children>
    </VBox>
  </children>
</AnchorPane>
